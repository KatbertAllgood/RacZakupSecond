<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_profile_background_for_data_holders"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/item_shop_image"

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_shop_pyaterochka"

        android:layout_marginVertical="12dp"
        android:layout_marginStart="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/item_shop_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="12dp"

        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="20sp"

        tools:text="Пятёрочка"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_shop_image"
        />

</androidx.constraintlayout.widget.ConstraintLayout>