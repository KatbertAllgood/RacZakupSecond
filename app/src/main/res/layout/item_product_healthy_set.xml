<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/item_product_healthy_set_image"

                android:layout_width="100dp"
                android:layout_height="100dp"

                android:padding="5dp"
                android:layout_margin="8dp"

                android:src="@drawable/shape_oval_green"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/item_product_healthy_set_reroll"

                android:layout_width="28dp"
                android:layout_height="28dp"

                android:src="@drawable/ic_reroll_green"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/item_product_healthy_set_price"

                android:layout_width="wrap_content"
                android:layout_height="18dp"

                android:background="@drawable/shape_rectangle_green_rounded_10dp_for_price"

                android:textSize="13sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                tools:text="259P"

                android:paddingHorizontal="5dp"

                android:gravity="center"

                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/item_product_healthy_set_title"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/packs_background"

                android:textAlignment="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_gravity="center"

                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                tools:text="пепсиваоывраорыв"

                android:maxLines="2"
                android:ellipsize="end"/>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="12dp">

            <TextView
                android:id="@+id/item_product_healthy_set_proteins_letter"

                android:layout_width="15dp"
                android:layout_height="15dp"

                android:gravity="center"

                android:background="@color/prot_color"

                android:text="@string/proteins_letter"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/roboto_bold"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/item_product_healthy_set_proteins_progress"
                android:layout_width="0dp"
                android:layout_height="15dp"
                style="?android:attr/progressBarStyleHorizontal"

                android:progressDrawable="@drawable/progress_bar_hs_detailed_proteins"

                android:progress="70"

                android:layout_marginEnd="32dp"

                app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_proteins_letter"
                app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_proteins_letter"
                app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_proteins_letter"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/item_product_healthy_set_proteins_value"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"

                tools:text="23 г"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:fontFamily="@font/roboto"

                app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_proteins_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_proteins_progress" />

            <TextView
                android:id="@+id/item_product_healthy_set_fats_letter"

                android:layout_width="15dp"
                android:layout_height="15dp"

                android:gravity="center"

                android:background="@color/fat_color"

                android:text="@string/fats_letter"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/roboto_bold"

                app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_proteins_letter"
                app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_proteins_letter" />

            <ProgressBar
                android:id="@+id/item_product_healthy_set_fats_progress"
                android:layout_width="0dp"
                android:layout_height="15dp"
                style="?android:attr/progressBarStyleHorizontal"

                android:progressDrawable="@drawable/progress_bar_hs_detailed_fats"

                android:progress="70"

                android:layout_marginEnd="32dp"

                app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_fats_letter"
                app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_fats_letter"
                app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_fats_letter"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/item_product_healthy_set_fats_value"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"

                tools:text="23 г"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:fontFamily="@font/roboto"

                app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_fats_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_fats_progress" />

            <TextView
                android:id="@+id/item_product_healthy_set_carbs_letter"

                android:layout_width="15dp"
                android:layout_height="15dp"

                android:gravity="center"

                android:background="@color/carb_color"

                android:text="@string/carbohydrates_letter"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_bold"

                android:paddingBottom="2dp"

                app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_fats_letter"
                app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_fats_letter" />

            <ProgressBar
                android:id="@+id/item_product_healthy_set_carbs_progress"
                android:layout_width="0dp"
                android:layout_height="15dp"
                style="?android:attr/progressBarStyleHorizontal"

                android:progressDrawable="@drawable/progress_bar_hs_detailed_carbohydrates"

                android:progress="70"

                android:layout_marginEnd="32dp"

                app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_carbs_letter"
                app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_carbs_letter"
                app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_carbs_letter"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/item_product_healthy_set_carbs_value"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"

                tools:text="23 г"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:fontFamily="@font/roboto"

                app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_carbs_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_carbs_progress" />

            <ImageView
                android:id="@+id/item_product_healthy_set_kcal_image"

                android:layout_width="15dp"
                android:layout_height="15dp"

                android:src="@drawable/ic_energy_value_kcal"
                android:background="@color/kcal_color"

                android:padding="3dp"

                app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_carbs_letter"
                app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_carbs_letter" />

            <TextView
                android:id="@+id/item_product_healthy_set_kcal_value"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"

                tools:text="342 ккал"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:fontFamily="@font/roboto"

                app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_kcal_image"
                app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_kcal_image"
                app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_kcal_image" />

            <TextView
                android:id="@+id/item_product_healthy_set_weigh_value"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"

                tools:text="400 г"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"

                app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_kcal_image"
                app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_kcal_image"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/item_product_healthy_set_count_plus"

                android:layout_width="28dp"
                android:layout_height="28dp"

                android:src="@drawable/ic_hs_detailed_plus"

                android:layout_marginBottom="10dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/item_product_healthy_set_count_value"

                android:layout_width="25dp"
                android:layout_height="wrap_content"

                android:layout_marginEnd="3dp"

                android:gravity="center"

                android:text="1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_bold"

                app:layout_constraintEnd_toStartOf="@id/item_product_healthy_set_count_plus"
                app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_count_plus"
                app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_count_plus"/>

            <ImageView
                android:id="@+id/item_product_healthy_set_count_minus"

                android:layout_width="28dp"
                android:layout_height="28dp"

                android:src="@drawable/ic_hs_detailed_minus"

                android:layout_marginBottom="10dp"
                android:layout_marginEnd="3dp"

                app:layout_constraintEnd_toStartOf="@id/item_product_healthy_set_count_value"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>