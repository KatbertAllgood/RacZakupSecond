<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/item_product_healthy_set_detailed_reroll"

            android:layout_width="32dp"
            android:layout_height="32dp"

            android:src="@drawable/ic_reroll_green"

            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/item_product_healthy_set_detailed_image"

            android:layout_width="72dp"
            android:layout_height="72dp"

            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/shape_red_button" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_tv_title"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"

            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"

            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"

            app:layout_constraintEnd_toStartOf="@id/item_product_healthy_set_detailed_reroll"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Творог" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_tv_weigh"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginVertical="12dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_product_healthy_set_detailed_kcal_image"
            app:layout_constraintTop_toBottomOf="@+id/item_product_healthy_set_detailed_kcal_image"
            tools:text="135 г" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_proteins_letter"

            android:layout_width="14dp"
            android:layout_height="14dp"

            android:layout_marginTop="5dp"

            android:gravity="center"

            android:background="@drawable/shape_circle_for_proteins_letter"

            android:text="@string/proteins_letter"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_bold"

            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_tv_title"
            app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_detailed_tv_title" />

        <ProgressBar
            android:id="@+id/item_product_healthy_set_detailed_proteins_progress"
            android:layout_width="0dp"
            android:layout_height="10dp"
            style="?android:attr/progressBarStyleHorizontal"

            android:progressDrawable="@drawable/progress_bar_hs_detailed_proteins"

            android:progress="70"

            android:layout_marginEnd="40dp"
            android:layout_marginStart="5dp"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_proteins_letter"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_proteins_letter"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_proteins_letter"
            app:layout_constraintEnd_toEndOf="@id/item_product_healthy_set_detailed_proteins_value"/>

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_proteins_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"
            android:layout_marginEnd="32dp"

            tools:text="3223 г"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_proteins_progress"
            app:layout_constraintEnd_toStartOf="@id/item_product_healthy_set_detailed_button_amount_plus"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_proteins_progress" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_fats_letter"

            android:layout_width="14dp"
            android:layout_height="14dp"

            android:layout_marginTop="2dp"

            android:gravity="center"

            android:background="@drawable/shape_circle_for_fats_letter"

            android:text="@string/fats_letter"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_bold"

            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_proteins_letter"
            app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_detailed_proteins_letter" />

        <ProgressBar
            android:id="@+id/item_product_healthy_set_detailed_fats_progress"
            android:layout_width="0dp"
            android:layout_height="10dp"
            style="?android:attr/progressBarStyleHorizontal"

            android:progressDrawable="@drawable/progress_bar_hs_detailed_fats"

            android:progress="70"

            android:layout_marginEnd="40dp"
            android:layout_marginStart="5dp"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_fats_letter"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_fats_letter"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_fats_letter"
            app:layout_constraintEnd_toEndOf="@id/item_product_healthy_set_detailed_fats_value"/>

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_fats_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"

            tools:text="23 г"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_fats_progress"
            app:layout_constraintEnd_toEndOf="@id/item_product_healthy_set_detailed_proteins_value"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_fats_progress" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_carbs_letter"

            android:layout_width="14dp"
            android:layout_height="14dp"

            android:layout_marginTop="2dp"

            android:gravity="center"

            android:background="@drawable/shape_circle_for_carbs_letter"

            android:text="@string/carbohydrates_letter"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_bold"

            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_fats_letter"
            app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_detailed_fats_letter" />

        <ProgressBar
            android:id="@+id/item_product_healthy_set_detailed_carbs_progress"
            android:layout_width="0dp"
            android:layout_height="10dp"
            style="?android:attr/progressBarStyleHorizontal"

            android:progressDrawable="@drawable/progress_bar_hs_detailed_carbohydrates"

            android:progress="70"

            android:layout_marginEnd="40dp"
            android:layout_marginStart="5dp"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_carbs_letter"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_carbs_letter"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_carbs_letter"
            app:layout_constraintEnd_toEndOf="@id/item_product_healthy_set_detailed_carbs_value"/>

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_carbs_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"

            tools:text="23 г"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_carbs_progress"
            app:layout_constraintEnd_toEndOf="@id/item_product_healthy_set_detailed_proteins_value"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_carbs_progress" />

        <ImageView
            android:id="@+id/item_product_healthy_set_detailed_kcal_image"

            android:layout_width="14dp"
            android:layout_height="14dp"

            android:layout_marginTop="2dp"

            android:src="@drawable/ic_energy_value_kcal"
            android:background="@drawable/shape_circle_for_energy_icon"

            android:padding="3dp"

            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_carbs_letter"
            app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_detailed_carbs_letter" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_kcal_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"

            tools:text="342 ккал"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_kcal_image"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_kcal_image"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_kcal_image" />


        <ImageView
            android:id="@+id/item_product_healthy_set_detailed_button_amount_plus"

            android:layout_width="36dp"
            android:layout_height="36dp"

            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"

            android:background="@drawable/shape_rectangle_rounded_right_for_amount_plus"
            android:src="@drawable/ic_hs_detailed_plus"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_product_healthy_set_detailed_kcal_value" />

        <LinearLayout
            android:id="@+id/item_product_healthy_set_detailed_ll_amount"

            android:layout_width="60dp"
            android:layout_height="36dp"
            android:orientation="vertical"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_button_amount_plus"
            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_button_amount_plus"
            app:layout_constraintEnd_toStartOf="@id/item_product_healthy_set_detailed_button_amount_plus">


            <TextView
                android:id="@+id/item_product_healthy_set_detailed_tv_amount"

                android:layout_width="match_parent"
                android:layout_height="18dp"

                android:gravity="center"

                android:background="@color/item_products_list_background_color"

                tools:text="1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold" />

            <TextView
                android:id="@+id/item_product_healthy_set_detailed_tv_amounted_price"

                android:layout_width="match_parent"
                android:layout_height="18dp"

                android:background="@color/item_products_list_background_color"

                android:gravity="center"

                tools:text="342Р"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:fontFamily="@font/roboto" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_product_healthy_set_detailed_button_amount_minus"

            android:layout_width="36dp"
            android:layout_height="36dp"

            android:background="@drawable/shape_rectangle_rounded_left_for_amount_minus"
            android:src="@drawable/ic_hs_detailed_minus"

            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_ll_amount"
            app:layout_constraintEnd_toStartOf="@id/item_product_healthy_set_detailed_ll_amount"
            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_ll_amount" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_tv_price"

            android:layout_width="wrap_content"
            android:layout_height="25dp"

            android:background="@drawable/shape_rectangle_green_rounded_10dp_for_price"

            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"

            android:paddingHorizontal="10dp"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp"

            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_product_healthy_set_detailed_image"
            app:layout_constraintStart_toStartOf="@+id/item_product_healthy_set_detailed_image"
            app:layout_constraintTop_toBottomOf="@+id/item_product_healthy_set_detailed_image"
            tools:text="599₽" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>