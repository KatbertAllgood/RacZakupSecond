<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="168dp">

        <ImageView
            android:id="@+id/item_product_healthy_set_detailed_image"

            android:layout_width="70dp"
            android:layout_height="0dp"

            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"

            app:layout_constraintBottom_toBottomOf="@+id/item_product_healthy_set_detailed_kcal"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/teal_200" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_price_place"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/price_two_dots"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"

            android:layout_marginBottom="10dp"

            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_image"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_price_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"

            tools:text="356"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_price_place"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_price_place"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_price_place"/>

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"

            tools:text="Филе курицы"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_image" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_proteins_letter"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"

            android:text="@string/proteins_letter"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_bold"

            app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_detailed_title"
            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_title" />

        <ProgressBar
            android:id="@+id/item_product_healthy_set_detailed_proteins_progress"
            android:layout_width="70dp"
            android:layout_height="8dp"
            style="?android:attr/progressBarStyleHorizontal"

            android:progressDrawable="@drawable/progress_bar_hs_detailed_proteins"

            android:layout_marginStart="10dp"

            android:progress="70"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_proteins_letter"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_proteins_letter"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_proteins_letter" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_proteins_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"

            tools:text="23,6"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_proteins_progress"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_proteins_progress"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_proteins_progress" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_fats_letter"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="3dp"

            android:text="@string/fats_letter"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_bold"

            app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_detailed_proteins_letter"
            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_proteins_letter" />

        <ProgressBar
            android:id="@+id/item_product_healthy_set_detailed_fats_progress"
            android:layout_width="70dp"
            android:layout_height="8dp"
            style="?android:attr/progressBarStyleHorizontal"

            android:progressDrawable="@drawable/progress_bar_hs_detailed_fats"

            android:progress="70"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_fats_letter"
            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_proteins_progress"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_fats_letter" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_fats_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"

            tools:text="23,6"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_fats_progress"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_fats_progress"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_fats_progress" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_carbohydrates_letter"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="3dp"

            android:text="@string/carbohydrates_letter"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_bold"

            app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_detailed_fats_letter"
            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_fats_letter" />

        <ProgressBar
            android:id="@+id/item_product_healthy_set_detailed_carbohydrates_progress"
            android:layout_width="70dp"
            android:layout_height="8dp"
            style="?android:attr/progressBarStyleHorizontal"

            android:progressDrawable="@drawable/progress_bar_hs_detailed_carbohydrates"

            android:progress="70"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_carbohydrates_letter"
            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_proteins_progress"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_carbohydrates_letter" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_carbohydrates_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"

            tools:text="23,6"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_carbohydrates_progress"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_carbohydrates_progress"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_carbohydrates_progress" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_kcal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="3dp"

            android:text="@string/kcal"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toBottomOf="@id/item_product_healthy_set_detailed_carbohydrates_letter"
            app:layout_constraintStart_toStartOf="@id/item_product_healthy_set_detailed_carbohydrates_letter" />

        <TextView
            android:id="@+id/item_product_healthy_set_detailed_kcal_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"

            tools:text="200"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_detailed_kcal"
            app:layout_constraintStart_toEndOf="@id/item_product_healthy_set_detailed_kcal"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_detailed_kcal"/>

        <ImageView
            android:id="@+id/item_product_healthy_set_detailed_reroll"

            android:layout_width="28dp"
            android:layout_height="28dp"

            android:src="@drawable/ic_reroll_green"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/item_product_healthy_set_count_plus"

            android:layout_width="32dp"
            android:layout_height="32dp"

            android:src="@drawable/ic_hs_detailed_plus"

            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/item_product_healthy_set_count_value"

            android:layout_width="32dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="5dp"

            android:gravity="center"

            android:text="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"

            app:layout_constraintEnd_toStartOf="@id/item_product_healthy_set_count_plus"
            app:layout_constraintBottom_toBottomOf="@id/item_product_healthy_set_count_plus"
            app:layout_constraintTop_toTopOf="@id/item_product_healthy_set_count_plus"/>

        <ImageView
            android:id="@+id/item_product_healthy_set_count_minus"

            android:layout_width="32dp"
            android:layout_height="32dp"

            android:src="@drawable/ic_hs_detailed_minus"

            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"

            app:layout_constraintEnd_toStartOf="@id/item_product_healthy_set_count_value"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>