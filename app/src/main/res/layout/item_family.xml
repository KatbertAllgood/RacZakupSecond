<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_profile_background_for_data_holders"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/tv_family_item_groupNum"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:fontFamily="@font/roboto"
        android:textSize="13sp"
        android:textColor="@color/black"

        tools:text="Группа 1."

        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_family_item_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        tools:text="Моя семья"

        android:fontFamily="@font/roboto"
        android:textSize="13sp"
        android:textColor="@color/black"

        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"

        app:layout_constraintStart_toEndOf="@id/tv_family_item_groupNum"
        app:layout_constraintTop_toTopOf="parent"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"

        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"

        android:paddingHorizontal="14dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_family_item_name">

        <LinearLayout
            android:visibility="gone"

            android:id="@+id/linear_item_holder1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1">

            <ImageView
                android:id="@+id/iv_family_member1"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/ic_profile_man" />

            <TextView
                android:id="@+id/tv_family_grid_member_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"

                tools:text="Имя"

                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/black"  />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"

            android:id="@+id/linear_item_holder2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1">

            <ImageView
                android:id="@+id/iv_family_member2"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/ic_profile_man" />

            <TextView
                android:id="@+id/tv_family_grid_member_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"

                tools:text="Имя"

                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/black"  />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"

            android:id="@+id/linear_item_holder3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1">

            <ImageView
                android:id="@+id/iv_family_member3"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/ic_profile_man" />

            <TextView
                android:id="@+id/tv_family_grid_member_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"

                tools:text="Имя"

                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/black"  />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"

            android:id="@+id/linear_item_holder4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1">

            <ImageView
                android:id="@+id/iv_family_member4"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/ic_profile_man" />

            <TextView
                android:id="@+id/tv_family_grid_member_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"

                tools:text="Имя"

                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/black"  />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"

            android:background="@drawable/shape_category_vegetables"

            android:id="@+id/constraint_item_holder_overCount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"

                android:src="@drawable/ic_profile_family_item_plus"

                android:layout_marginEnd="2dp"

                app:layout_constraintTop_toTopOf="@id/tv_family_grid_member_overCount"
                app:layout_constraintBottom_toBottomOf="@id/tv_family_grid_member_overCount"
                app:layout_constraintEnd_toStartOf="@id/tv_family_grid_member_overCount"/>

            <TextView
                android:id="@+id/tv_family_grid_member_overCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="5"

                android:fontFamily="@font/roboto"
                android:textSize="28sp"
                android:textColor="@color/toolbar_auth_back_arrow"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>